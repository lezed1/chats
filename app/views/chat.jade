    .navbar-inner
        .container
            form.navbar-form(ng-submit='sendMessage()')
                div.input-append
                    input(type='text', form='messageContainer', ng-model='messageText', placeholder='Enter your message!')
                    button.btn(type='submit', ng-click='sendMessage()') Send

