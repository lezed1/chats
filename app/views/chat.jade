            form.navbar-form.pull-right
                div.input-prepend
                    span.add-on Name:
                    input.input-large(type='text', ng-model='username', placeholder='Enter your name!')
.container
    .row-fluid
        #headerContainer.span10
            h3.inline Messages: 

            table.table.table-bordered.table-hover
                thead
                    tr
                        th
                            i.pull-right Username
                        th Message
                tbody
                    tr
                        td
